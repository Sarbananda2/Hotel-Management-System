<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotel.desktop.controller.RoomController" spacing="10.0">
   <children>
      <Label text="Room Management" style="-fx-font-size: 20px; -fx-font-weight: bold;">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
      <TableView fx:id="roomTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0" />
            <TableColumn fx:id="roomNumberColumn" text="Room Number" prefWidth="150.0" />
            <TableColumn fx:id="roomTypeIdColumn" text="Room Type ID" prefWidth="150.0" />
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="150.0" />
         </columns>
      </TableView>
      <HBox spacing="10.0">
         <children>
            <Label text="Update Status:" />
            <ComboBox fx:id="statusCombo" prefWidth="200.0" />
            <Button fx:id="updateStatusButton" mnemonicParsing="false" text="Update Status" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>

