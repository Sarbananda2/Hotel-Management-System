<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotel.desktop.controller.CheckInController" spacing="20.0">
   <children>
      <Label text="Check In Guest" style="-fx-font-size: 20px; -fx-font-weight: bold;">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
      
      <!-- Step 1: Reservation Selection -->
      <VBox spacing="10.0">
         <children>
            <Label text="Step 1: Select Reservation" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            <GridPane hgap="10.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints minWidth="150.0" />
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>
               <children>
                  <Label text="Reservation:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <ComboBox fx:id="reservationCombo" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="400.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
            
            <!-- Reservation Details Panel -->
            <VBox fx:id="reservationDetailsPanel" visible="false" managed="false" spacing="5.0" style="-fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
               <children>
                  <Label text="Reservation Details" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-padding: 5 10 5 10;" />
                  <GridPane hgap="10.0" vgap="5.0">
                     <columnConstraints>
                        <ColumnConstraints minWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                     </columnConstraints>
                     <children>
                        <Label text="Guest Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="guestNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="guestEmailLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="phoneLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Room Type:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Label fx:id="roomTypeLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Check-in Date:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <Label fx:id="checkInDateLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="Check-out Date:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <Label fx:id="checkOutDateLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <Label text="Nights:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                        <Label fx:id="nightsLabel" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                        <Label fx:id="reservationStatusLabel" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="5.0" />
                     </padding>
                  </GridPane>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
      
      <!-- Step 2: Room Selection -->
      <VBox spacing="10.0">
         <children>
            <Label text="Step 2: Select Room" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            <GridPane hgap="10.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints minWidth="150.0" />
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>
               <children>
                  <Label text="Room:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <ComboBox fx:id="roomCombo" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="400.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
            
            <!-- Room Details Panel -->
            <VBox fx:id="roomDetailsPanel" visible="false" managed="false" spacing="5.0" style="-fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
               <children>
                  <Label text="Room Details" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-padding: 5 10 5 10;" />
                  <GridPane hgap="10.0" vgap="5.0">
                     <columnConstraints>
                        <ColumnConstraints minWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                     </columnConstraints>
                     <children>
                        <Label text="Room Number:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="roomNumberLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Room Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="roomTypeNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="roomStatusLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Validation:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                           <children>
                              <Label fx:id="validationLabel" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="5.0" />
                     </padding>
                  </GridPane>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
      
      <!-- Action Buttons -->
      <HBox spacing="10.0">
         <children>
            <Button fx:id="checkInButton" mnemonicParsing="false" text="Check In" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150;" />
            <Button fx:id="clearButton" mnemonicParsing="false" text="Clear" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-pref-width: 150;" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>

