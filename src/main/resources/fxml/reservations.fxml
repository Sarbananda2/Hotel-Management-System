<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotel.desktop.controller.ReservationController">
   <top>
      <Label text="Reservation Management" style="-fx-font-size: 20px; -fx-font-weight: bold;">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
   </top>
   <center>
      <SplitPane dividerPositions="0.6" orientation="VERTICAL">
         <items>
            <VBox spacing="10.0">
               <children>
                  <Label text="Reservations List" style="-fx-font-weight: bold;" />
                  <TableView fx:id="reservationTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0" />
                        <TableColumn fx:id="guestNameColumn" text="Guest Name" prefWidth="150.0" />
                        <TableColumn fx:id="emailColumn" text="Email" prefWidth="200.0" />
                        <TableColumn fx:id="checkInColumn" text="Check In" prefWidth="100.0" />
                        <TableColumn fx:id="checkOutColumn" text="Check Out" prefWidth="100.0" />
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100.0" />
                     </columns>
                  </TableView>
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel Reservation" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label text="Create New Reservation" style="-fx-font-weight: bold;" />
                  <GridPane hgap="10.0" vgap="10.0">
                     <columnConstraints>
                        <ColumnConstraints minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                     </columnConstraints>
                     <children>
                        <Label text="Guest Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="guestNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="guestEmailField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Room Type:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <ComboBox fx:id="roomTypeCombo" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Check In:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <DatePicker fx:id="checkInDate" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="Check Out:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <DatePicker fx:id="checkOutDate" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
                  <Button fx:id="createButton" mnemonicParsing="false" text="Create Reservation" style="-fx-background-color: #28a745; -fx-text-fill: white;" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </items>
      </SplitPane>
   </center>
</BorderPane>

