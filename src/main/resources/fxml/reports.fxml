<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotel.desktop.controller.ReportController" spacing="20.0">
   <children>
      <Label text="Daily Report" style="-fx-font-size: 20px; -fx-font-weight: bold;">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
      <HBox spacing="10.0">
         <children>
            <Label text="Select Date:" />
            <DatePicker fx:id="datePicker" />
            <Button fx:id="generateButton" mnemonicParsing="false" text="Generate Report" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <GridPane hgap="20.0" vgap="15.0">
         <columnConstraints>
            <ColumnConstraints minWidth="200.0" />
            <ColumnConstraints minWidth="200.0" />
         </columnConstraints>
         <children>
            <Label text="Total Rooms:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;" />
            <Label fx:id="totalRoomsLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Occupied:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;" />
            <Label fx:id="occupiedLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Occupancy %:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;" />
            <Label fx:id="occupancyPctLabel" text="0%" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Cash Revenue:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;" />
            <Label fx:id="revenueLabel" text="₹0.00" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="ADR (Average Daily Rate):" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;" />
            <Label fx:id="adrLabel" text="₹0.00" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>

