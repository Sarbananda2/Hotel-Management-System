<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotel.desktop.controller.AuditController" spacing="20.0" style="-fx-padding: 20;">
   <children>
      <Label text="Audit Logs" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
      <HBox spacing="10.0">
         <children>
            <Label text="User ID:" />
            <TextField fx:id="userIdFilterField" prefWidth="100.0" />
            <Label text="Action:" />
            <TextField fx:id="actionFilterField" prefWidth="150.0" />
            <Button fx:id="filterButton" mnemonicParsing="false" text="Filter" />
         </children>
      </HBox>
      <TableView fx:id="auditTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0" />
            <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="80.0" />
            <TableColumn fx:id="actionColumn" text="Action" prefWidth="150.0" />
            <TableColumn fx:id="entityTypeColumn" text="Entity Type" prefWidth="120.0" />
            <TableColumn fx:id="entityIdColumn" text="Entity ID" prefWidth="80.0" />
            <TableColumn fx:id="timestampColumn" text="Timestamp" prefWidth="200.0" />
         </columns>
      </TableView>
   </children>
</VBox>
